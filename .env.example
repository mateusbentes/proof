# Backend
NODE_ENV=development
PORT=3001
DATABASE_URL=postgresql://proof:proof_password@localhost:5432/proof_db
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRY=7d

# Rasa
RASA_URL=http://localhost:5005

# Redis (Caching)
REDIS_URL=redis://localhost:6379

# Firebase (Push Notifications)
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project-id","private_key":"your-private-key"}

# ATProto Federation
ATPROTO_URL=https://bsky.social
ATPROTO_USERNAME=your_atproto_username
ATPROTO_PASSWORD=your_atproto_password

# CDN Integration
CDN_PROVIDER=cloudflare
CDN_URL=https://cdn.proof.local
CDN_API_KEY=your_cdn_api_key

# Load Balancing
LOAD_BALANCER_SERVERS=http://server1:3001,http://server2:3001,http://server3:3001

# Frontend
REACT_APP_API_URL=http://localhost:3001

# Image Generation (Stable Diffusion)
HUGGINGFACE_API_KEY=your_huggingface_api_key
STABLE_DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5

# Email (optional, for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password
SMTP_FROM=noreply@proof.local
FRONTEND_URL=http://localhost:3000

# Moderation
BOT_DETECTION_THRESHOLD=0.7
GENERIC_RESPONSE_THRESHOLD=0.6

# Docker Configuration
# For Docker, use service names instead of localhost:
# DATABASE_URL=postgresql://proof:proof_password@postgres:5432/proof_db
# RASA_URL=http://rasa:5005
# REDIS_URL=redis://redis:6379
# REACT_APP_API_URL=http://localhost:3001 (from browser perspective)
